<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="Launcher.Options" Cursor="Arrow" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None" AllowsTransparency="True" Title="Window1" Height="828" Width="670" Icon="Resources/ico.ico" Background="{x:Null}" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Grid Width="400" Height="550" Loaded="Grid_Loaded">
        <Grid.Background>
      <ImageBrush ImageSource="Resources/settings_bg.bmp" />
    </Grid.Background>
    <Button Name="Close" HorizontalAlignment="Left" Margin="348,0,0,0" VerticalAlignment="Top" Width="40" Height="40" BorderThickness="0" Background="{x:Null}" PreviewMouseLeftButtonUp="Close_PreviewMouseLeftButtonUp">
      <Button.Template>
        <ControlTemplate TargetType="{x:Type Button}">
          <StackPanel>
            <Image Name="Close2" Source="Resources/close_hover.bmp" Stretch="Fill" Visibility="Collapsed" />
            <Image Name="Close1" Source="Resources/close.bmp" Stretch="Fill" Visibility="Visible" />
          </StackPanel>
          <ControlTemplate.Triggers>
            <Trigger Property="UIElement.IsMouseOver" Value="True">
              <Setter TargetName="Close2" Property="UIElement.Visibility" Value="Visible" />
              <Setter TargetName="Close1" Property="UIElement.Visibility" Value="Collapsed" />
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Button.Template>
    </Button>
    <CheckBox Name="Music" Content="" HorizontalAlignment="Right" Margin="0,368,274,0" VerticalAlignment="Top" BorderThickness="0" Width="16" Height="15" Style="{StaticResource myCheckBoxStyle}" Background="{x:Null}" />
    <CheckBox Name="WinMode" Content="" HorizontalAlignment="Left" Margin="166,486,0,0" VerticalAlignment="Top" BorderThickness="0" Width="16" Height="15" Style="{StaticResource myCheckBoxStyle}" RenderTransformOrigin="0.469,0.483" Background="{x:Null}" />
    <CheckBox Name="Effects" Content="" HorizontalAlignment="Left" Margin="110,426,0,0" VerticalAlignment="Top" BorderThickness="0" Width="16" Height="15" Style="{StaticResource myCheckBoxStyle}" RenderTransformOrigin="0.484,0.5" Background="{x:Null}" />
        <Button Name="Save" HorizontalAlignment="Left" Margin="272,507,0,0" VerticalAlignment="Top" Width="116" Height="23" BorderThickness="0" Background="{x:Null}" Click="Save_Click">
      <Button.Template>
        <ControlTemplate TargetType="{x:Type Button}">
          <StackPanel>
            <Image Name="Save2" Source="Resources/save_hover.bmp" Stretch="Fill" Visibility="Collapsed" />
            <Image Name="Save1" Source="Resources/save.bmp" Stretch="Fill" Visibility="Visible" />
          </StackPanel>
          <ControlTemplate.Triggers>
            <Trigger Property="UIElement.IsMouseOver" Value="True">
              <Setter TargetName="Save2" Property="UIElement.Visibility" Value="Visible" />
              <Setter TargetName="Save1" Property="UIElement.Visibility" Value="Collapsed" />
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Button.Template>
    </Button>
        <ComboBox Name="Resolution" HorizontalAlignment="Left" Margin="110,317,0,0" VerticalAlignment="Top" Width="212" />
    <TextBox Name="AccountBox" HorizontalAlignment="Left" Height="23" Margin="149,108,0,0" TextWrapping="Wrap" Text="account" VerticalAlignment="Top" Width="165" Background="#FFFFFFFF" />
    <ComboBox Name="Language" HorizontalAlignment="Left" Margin="129,249,0,0" VerticalAlignment="Top" Width="165" Height="23" IsEnabled="True" />
  </Grid>
</Window>